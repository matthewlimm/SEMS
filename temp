import Adafruit_DHT  # Import the Adafruit DHT library (make sure to install it first)

# Set up the sensor type and GPIO pin
sensor = Adafruit_DHT.DHT22  # Replace with DHT11 if using that sensor
pin = 4  # Replace with the actual GPIO pin number connected to the sensor

# Try to read the sensor data
humidity, temperature = Adafruit_DHT.read_retry(sensor, pin)

# Check if data was successfully retrieved
if humidity is not None and temperature is not None:
    print(f'Temperature: {temperature:.2f} Â°C')
    print(f'Humidity: {humidity:.2f} %')
else:
    print('Failed to retrieve sensor data. Check wiring and sensor connection.')
